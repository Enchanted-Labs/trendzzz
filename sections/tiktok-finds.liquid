<section class="categories-swiper-section">
  <div class="page-padding-7">
    <div class="container-v5">
      <div class="collection-slider-title">{{section.settings.finds-title}}</div>
      <div data-delay="4000" data-animation="slide" class="categories-slider-collection-page w-slider" data-autoplay="false" data-easing="ease" data-hide-arrows="false" data-disable-swipe="false" data-autoplay-limit="0" data-nav-spacing="6" data-duration="500" data-infinite="false">
        <div class="categorie-item-2 w-slider-mask">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'finds' %}
                <div class="categorie-item-slide-2 w-slide">
                  <a href="{{block.settings.finds-link}}" class="categorie-card w-inline-block">
                    <div class="categorie-symbol-2" style="background-image: url({{'Ellipse-20.svg' | asset_url}});">
                      <div class="image-framed"><img src="{{block.settings.finds-image | img_url}}" loading="lazy" alt="" class="img-collection"></div>
                    </div>
                    <div class="categorie-info-wrapper-2">
                      <div class="categorie-information-3">
                        <p class="categories-p">{{block.settings.finds-text}}</p>
                      </div>
                    </div>
                  </a>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
        <div class="product12_arrow left w-slider-arrow-left"><img src="{{'ic20-chevron-left.svg' | asset_url}}" loading="lazy" alt="" class="image-5"></div>
        <div class="product12_arrow w-slider-arrow-right"><img src="{{'ic20-chevron-right.svg' | asset_url}}" loading="lazy" alt="" class="image-5"></div>
        <div class="categories-dots-2 w-slider-nav w-slider-nav-invert w-round"></div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Tiktok Finds",
    "tag": "section",
    "class": "finds",
    "settings": [
      {
        "type": "text",
        "id": "finds-title",
        "label": "Finds Title"
      }
    ],
    "max_blocks": 50,
    "blocks": [
      {
        "name": "Finds",
        "type": "finds",
        "settings": [
          {
            "type": "text",
            "id": "finds-text",
            "label": "Finds Text"
          }, {
            "type": "url",
            "id": "finds-link",
            "label": "Finds Link"
          }, {
            "type": "image_picker",
            "id": "finds-image",
            "label": "Finds Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Tiktok Finds",
        "blocks": [
          {
            "type": "finds"
          }
        ]
      }
    ]
  }
{% endschema %}